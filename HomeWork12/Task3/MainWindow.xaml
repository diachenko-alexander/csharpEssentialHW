<Window x:Class="Task3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task3"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="TextBox" HorizontalAlignment="Left" Height="36" Margin="265,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="170" TextChanged="TextBox_TextChanged" Grid.ColumnSpan="2"/>
        <Button Content="Button" Name="StartButton" HorizontalAlignment="Left" Margin="95,157,0,0" VerticalAlignment="Top" Width="75" Click="StartButton_Click" Grid.ColumnSpan="2"/>
        <Button Content="Button" Name="StopButton" HorizontalAlignment="Left" Margin="208,157,0,0" VerticalAlignment="Top" Width="75" Click="StopButton_Click" Grid.ColumnSpan="2"/>
        <Button Content="Button" Name="ClearButton" HorizontalAlignment="Left" Margin="349,157,0,0" VerticalAlignment="Top" Width="75" Click="ClearButton_Click" Grid.ColumnSpan="2"/>

    </Grid>
</Window>
